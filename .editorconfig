# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.css,*.js,*.json,*.ts,*.tsx,*.yaml,*.yml}]
indent_size = 2

[*.md]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
